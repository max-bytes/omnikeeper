{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "File": {
      "PathFormat": "Logs/app-{Date}.log",
      "FileSizeLimitBytes": 10485760, // =10mb
      "RetainedFileCountLimit": 30,
      "Json": true
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": false,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": true
      }
    }
  },
  "Authentication": {
    "debugAllowAll": false,
    "ValidateIssuer":  true
  },
  "Authorization": {
    "debugAllowAll": false
  },
  "BaseURL": "",
  "ShowPII": false
}
